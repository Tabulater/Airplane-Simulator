        </weight-balance>
        <flight-controls>
            <stability-augmentation>
                <pitch-damper>true</pitch-damper>
                <roll-damper>true</roll-damper>
                <yaw-damper>true</yaw-damper>
                <attitude-hold>true</attitude-hold>
                <altitude-hold>true</altitude-hold>
                <heading-hold>true</heading-hold>
            </stability-augmentation>
            <force-trim>true</force-trim>
            <auto-hover>true</auto-hover>
        </flight-controls>
    </flight-dynamics>
