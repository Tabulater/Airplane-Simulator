        <rotor>
            <type>Five-bladed main rotor</type>
            <diameter>18.59m</diameter>
            <blade-chord>0.55m</blade-chord>
            <blade-twist>-10Â°</blade-twist>
        </rotor>
    </systems>
    
    <model>
        <path>Models/AW101/aw101.ac</path>
        <texture>Textures/AW101/liveries/default.png</texture>
        <scale>1.0</scale>
        <lod>15000</lod>
        <cockpit-3d>true</cockpit-3d>
    </model>
    
    <flight-dynamics>
