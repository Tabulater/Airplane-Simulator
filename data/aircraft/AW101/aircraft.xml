                <vortex-ring-state>true</vortex-ring-state>
                <ground-effect>true</ground-effect>
            </rotor-dynamics>
            <coefficients>
                <lift>3.2</lift>
                <drag>0.55</drag>
                <sideforce>1.5</sideforce>
